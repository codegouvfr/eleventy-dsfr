{# Mandatory variable `tags: string[]` to make it work #}
<ul class="fr-tags-group">
    {% for tag in tags | filterTagList %}
        {% set tagUrl %}{{ "/blog/tags/"| locale_url }}{{ tag | slugify }}/{% endset %}
        <li>
            <a href="{{ tagUrl }}" class="fr-tag" target="_self">{{ tag }}</a>
        </li>
    {% endfor %}
</ul>